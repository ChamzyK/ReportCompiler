<UserControl x:Class="ReportCompiler.WPF.Views.UserControls.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Меню"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="5"/>
        
        <Separator Margin="5,0"/>
        <Button Content="Шаблон отчета" Command="{Binding OpenReportTemplateCommand}"/>
        <Button Content="Руководство пользователя" Command="{Binding OpenManualCommand}"/>
        
        <Separator Margin="5,0"/>
        <Button Content="О программе" Command="{Binding AboutProgramCommand}"/>
        <Button Content="О разработчике" Command="{Binding AboutDevCommand}"/>
        
        <Separator Margin="5,0"/>
        <Button Content="Закрыть приложение" Command="{StaticResource CloseWindowCommand}"/>
    </StackPanel>
</UserControl>
