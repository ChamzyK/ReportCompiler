<Window x:Class="ReportCompiler.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding Path=MainViewModel, Source={StaticResource Locator}}"
        Title="{Binding Title}" 
        Height="450" Width="500">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="О программе"/>
            <MenuItem Header="О разработчике"/>
            <MenuItem Header="Выход" Command="{StaticResource CloseWindowCommand}"/>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="СтатусБар!!!"/>
            <StatusBarItem HorizontalAlignment="Right">
                <ResizeGrip/>
            </StatusBarItem>
        </StatusBar>
        
        <Grid/>
    </DockPanel>
</Window>
